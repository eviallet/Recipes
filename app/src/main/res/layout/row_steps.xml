<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:id="@+id/row_steps_count_layout"
            android:layout_width="30dp"
            android:layout_height="60dp"

            android:layout_marginStart="3dp"
            android:orientation="vertical"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/row_steps_count_top_link"
                android:layout_width="2dp"
                android:layout_height="15dp"

                android:src="@android:color/holo_green_dark"

                android:layout_gravity="center"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:id="@+id/row_steps_count_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:src="@drawable/bkg_circle"

                    tools:ignore="ContentDescription" />
                <TextView
                    android:id="@+id/row_steps_count_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:text="1"
                    android:textAlignment="gravity"
                    android:textSize="18sp"

                    android:gravity="center"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/row_steps_count_bottom_link"
                android:layout_width="2dp"
                android:layout_height="15dp"

                android:src="@android:color/holo_green_dark"

                android:layout_gravity="center"/>
        </LinearLayout>
        <TextView
            android:id="@+id/row_steps_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="16sp"
            android:text="Step"
            android:textColor="@color/colorBlack"

            android:layout_toEndOf="@id/row_steps_count_layout"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"/>



    </RelativeLayout>
</android.support.v7.widget.CardView>