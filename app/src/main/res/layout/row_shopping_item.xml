<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:elevation="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_gravity="center">


        <ImageView
            android:id="@+id/row_shopping_item_add"
            android:layout_width="32dp"
            android:layout_height="32dp"

            android:src="@drawable/ic_add"
            android:tint="@color/colorWhite"
            android:background="@drawable/bkg_circle"
            android:backgroundTint="@color/colorGreen"

            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="2dp"/>
        <TextView
            android:id="@+id/row_shopping_item_quantity"
            android:layout_width="40dp"
            android:layout_height="wrap_content"

            android:text="0"
            android:textSize="17sp"
            android:textAlignment="center"

            android:layout_centerVertical="true"
            android:elevation="3dp"
            android:layout_toStartOf="@id/row_shopping_item_add"/>
        <ImageView
            android:id="@+id/row_shopping_item_dim"
            android:layout_width="32dp"
            android:layout_height="32dp"

            android:src="@drawable/ic_remove"
            android:tint="@color/colorWhite"
            android:background="@drawable/bkg_circle"
            android:backgroundTint="@color/colorRed"

            android:layout_toStartOf="@id/row_shopping_item_quantity"
            android:layout_centerVertical="true"/>


        <ImageView
            android:id="@+id/row_shopping_item_image"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/row_shopping_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/colorBlack"
            android:fontFamily="@font/octagen_roman"
            android:textStyle="bold"
            android:textSize="17sp"
            android:text="IngrÃ©dient"

            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@id/row_shopping_item_image"
            android:layout_toStartOf="@id/row_shopping_item_dim"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>